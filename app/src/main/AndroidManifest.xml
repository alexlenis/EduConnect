<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Camera / Gallery -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Map / Location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Camera not required -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduConnect.AppCompat"
        tools:targetApi="31">

        <!-- Google Maps API KEY -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="PUT_YOUR_GOOGLE_MAPS_API_KEY_HERE" />

        <!-- MAIN -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.EduConnect.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SUBJECTS -->
        <activity
            android:name=".ui.activities.SubjectActivity"
            android:exported="false" />

        <!-- ASSIGNMENTS -->
        <activity
            android:name=".ui.activities.AssignmentActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activities.AssignmentListActivity"
            android:exported="false" />

        <!-- GRADES -->
        <activity
            android:name=".ui.activities.GradesActivity"
            android:exported="false" />

        <!-- NOTES -->
        <activity
            android:name=".ui.activities.NoteActivity"
            android:exported="false" />

        <!-- SETTINGS -->
        <activity
            android:name=".ui.activities.SettingsActivity"
            android:exported="false" />

        <!-- CALENDAR -->
        <activity
            android:name=".ui.activities.CalendarActivity"
            android:exported="false" />

        <!-- MAP -->
        <activity
            android:name=".ui.activities.MapActivity"
            android:exported="false" />

    </application>

</manifest>
